RewriteRule "^_rslv_inflect +(.+)" \\
  "$document_root/e/x/inflect? --api --ua %{QUERY_STRING} \$1" [L]
#  "$document_root/e/x/inflect? --api $tlog --ua %{QUERY_STRING} \$1" [L]

# yyy it seems bizarre that you cannot call a script with args, but have
